<h2>Admin Dashboard</h2>
<p>Welcome, <%= username %> (Admin)</p>

<h3>Users</h3>
<ul>
    <% users.forEach(u=> { %>
        <li>
            <%= u.username %> - <%= u.firstName %>
                    <%= u.lastName %>
                        <form action="/admin/deleteUser/<%= u._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
        </li>
        <% }) %>
</ul>

<h3>Posts</h3>
<ul>
    <% posts.forEach(p=> { %>
        <li>
            <%= p.message %> (by <%= p.poster %>)
                    <form action="/admin/deletePost/<%= p._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
        </li>
        <% }) %>
</ul>